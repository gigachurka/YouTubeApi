<!DOCTYPE html>
@model YouTubeApi.ViewModels.RegisterViewModel

<div style="max-width: 400px; margin: 40px auto; background: #fff; border-radius: 12px; box-shadow: 0 4px 16px rgba(0,0,0,0.08); padding: 32px 28px;">
	<div style="display: flex; justify-content: center; gap: 20px; margin-bottom: 24px;">
		<button id="tabRegister" type="button" class="tab-btn active" onclick="showTab('register')">Регистрация</button>
		<button id="tabLogin" type="button" class="tab-btn" onclick="redirectToLogin()">Вход</button>
	</div>

	<div id="registerForm">
		<form asp-action="Register" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div>
				<label asp-for="Email"></label>
				<input asp-for="Email" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
			<div>
				<label asp-for="Year"></label>
				<input asp-for="Year" />
				<span asp-validation-for="Year" class="text-danger"></span>
			</div>
			<div>
				<label asp-for="Password"></label>
				<input asp-for="Password" type="password" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<div>
				<label asp-for="PasswordConfirm"></label>
				<input asp-for="PasswordConfirm" type="password" />
				<span asp-validation-for="PasswordConfirm" class="text-danger"></span>
			</div>
			<div>
				<label asp-for="ChannelId"></label>
				<input asp-for="ChannelId" />
				<span asp-validation-for="ChannelId" class="text-danger"></span>
			</div>
			<button type="submit" class="yt-button">Зарегистрироваться</button>
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}

<style>
	.tab-btn {
		background: none;
		border: none;
		font-size: 1.1rem;
		font-weight: 600;
		color: #e53935;
		padding: 8px 18px;
		border-radius: 8px 8px 0 0;
		cursor: pointer;
		transition: background 0.2s, color 0.2s;
	}

		.tab-btn.active {
			background: #ffe0b2;
			color: #b71c1c;
		}

	.yt-button {
		background-color: #e53935;
		color: #fff;
		border: none;
		border-radius: 8px;
		padding: 12px 20px;
		font-size: 1rem;
		font-weight: bold;
		margin-top: 18px;
		width: 100%;
		cursor: pointer;
		transition: background 0.2s;
	}

		.yt-button:hover {
			background-color: #b71c1c;
		}

	.text-danger {
		color: #dc3545;
		font-size: 0.95em;
	}

	form > div {
		margin-bottom: 14px;
	}
</style>

<script>
	function showTab(tab) {
		document.getElementById('registerForm').style.display = tab === 'register' ? '' : 'none';
		document.getElementById('tabRegister').classList.toggle('active', tab === 'register');
		document.getElementById('tabLogin').classList.toggle('active', tab === 'login');
	}
	function redirectToLogin() {
		window.location.href = '/Account/Login';
	}
</script>