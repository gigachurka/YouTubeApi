<style>
.glass-card {
    max-width: 600px;
    margin: 60px auto 0;
    background: rgba(255,255,255,0.25);
    border-radius: 18px;
    box-shadow: 0 8px 32px 0 rgba(31,38,135,0.18);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1.5px solid rgba(255,255,255,0.25);
    padding: 38px 36px 32px 36px;
    color: #222;
    text-align: center;
}
.glass-card h1 {
    font-size: 2.1rem;
    color: #d32f2f;
    margin-bottom: 18px;
}
