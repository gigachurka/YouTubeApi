        cursor: pointer;
        transition: background-color 0.3s;
    }

        .auth-toggle:hover {
            background-color: #1565c0;
        }

    .auth-form {
        display: none;
        margin-top: 20px;
        width: 100%;
        max-width: 400px;
    }

        .auth-form form {
            display: flex;
            flex-direction: column;
            gap: 12px;
        }

        .auth-form input {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 6px;
            font-size: 16px;
        }

        .auth-form button {
            padding: 10px;
            background-color: #4caf50;
            color: white;
            font-weight: bold;
            border: none;
            border-radius: 6px;
