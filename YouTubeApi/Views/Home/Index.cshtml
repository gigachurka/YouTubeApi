        <canvas id="viewsLikesChart" width="800" height="400"></canvas>
    </div>
       <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        function getTitleColor() {
            return document.body.classList.contains('dark-theme') ? '#43a047' : '#222';
        }
    </script>

    <script>
        document.addEventListener("DOMContentLoaded", async () => {
            const urlParams = new URLSearchParams(window.location.search);
            const channelId = urlParams.get("channelId");

            if (!channelId) return;

            // Загрузка данных для первого графика
            const resViews = await fetch(`/api/youtube/analytics/view-trend/${channelId}`);
            if (!resViews.ok) return;

            const dataViews = await resViews.json();
            const labels = dataViews.map(x => x.date);
            const views = dataViews.map(x => x.views);

            // Загрузка данных для второго графика через контроллер
            const resLikes = await fetch(`/api/youtube/analytics/like-trend/${channelId}`);
            if (!resLikes.ok) return;

            const dataLikes = await resLikes.json();
            const likes = dataLikes.map(x => x.likes);

            let viewChart, viewsLikesChart;
            function renderCharts() {
                if (viewChart) viewChart.destroy();
                if (viewsLikesChart) viewsLikesChart.destroy();

                // Первый график (просмотры + дата)
                const ctxViews = document.getElementById('viewTrendChart').getContext('2d');
                viewChart = new Chart(ctxViews, {
                    type: 'line',
                    data: {
                        labels: labels,
                        datasets: [{
                            label: 'Количество просмотров',
                            data: views,
                            backgroundColor: 'rgba(211, 47, 47, 0.2)',
                            borderColor: 'rgba(211, 47, 47, 1)',
                            borderWidth: 2,
                            tension: 0.3,
                            pointRadius: 3,
                            fill: true
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: {
                            title: {
                                display: true,
                                text: 'График просмотров по дате',
                                color: getTitleColor(),
                                font: { size: 22 }
                            }
                        },
                        scales: {
                            x: { title: { display: true, text: 'Дата публикации' } },
                            y: { beginAtZero: true, title: { display: true, text: 'Просмотры' } }
                        }
                    }
                });

                // Второй график (соотношение просмотров и лайков)
                const ctxViewsLikes = document.getElementById('viewsLikesChart').getContext('2d');
                viewsLikesChart = new Chart(ctxViewsLikes, {
                    type: 'bar',
                    data: {
                        labels: labels,
                        datasets: [
                            {
                                label: 'Просмотры',
                                data: views,
                                backgroundColor: 'rgba(66, 133, 244, 0.7)',
                                borderColor: 'rgba(66, 133, 244, 1)',
                                borderWidth: 1
                            },
                            {
                                label: 'Лайки',
                                data: likes,
                                backgroundColor: 'rgba(52, 168, 83, 0.7)',
                                borderColor: 'rgba(52, 168, 83, 1)',
                                borderWidth: 1
                            }
                        ]
                    },
                    options: {
                        responsive: true,
                        plugins: {
                            title: {
                                display: true,
                                text: 'Соотношение просмотров и лайков',
                                color: getTitleColor(),
                                font: { size: 22 }
                            },
                            tooltip: {
                                callbacks: {
                                    afterLabel: function(context) {
                                        const views = context.dataset.data[context.dataIndex];
                                        const likes = context.datasetIndex === 0 ?
                                            context.chart.data.datasets[1].data[context.dataIndex] :
                                            context.chart.data.datasets[0].data[context.dataIndex];

                                        if (context.datasetIndex === 0) {
                                            const ratio = (likes / views * 100).toFixed(2);
                                            return `Соотношение лайков: ${ratio}%`;
                                        } else {
                                            const ratio = (views / likes).toFixed(2);
                                            return `Соотношение просмотров: ${ratio}:1`;
                                        }
                                    }
                                }
                            }
                        },
                        scales: {
                            x: { title: { display: true, text: 'Дата публикации' } },
                            y: { beginAtZero: true, title: { display: true, text: 'Количество' } }
                        }
                    }
                });
            }

            renderCharts();

            // Перерисовка при смене темы
            const observer = new MutationObserver(() => {
                renderCharts();
            });
            observer.observe(document.body, { attributes: true, attributeFilter: ['class'] });
        });
    </script>
