<h2 style="
    text-align: center;
    color: #222;
    font-size: 1.4rem;
    margin-bottom: 20px;
    font-weight: 600;
">
    Получение видео с YouTube канала по Channel ID
</h2>

<div style="max-width: 600px; margin: 0 auto 30px; display: flex; flex-direction: column; gap: 16px;">
    <div style="display: flex; gap: 10px;">
        <input type="text" id="channelIdInput" name="channelId" placeholder="Введите Channel ID" required class="input-field" />
        <button id="loadBtn" class="yt-button" type="button">Загрузить</button>
        <button id="showBtn" class="yt-button" type="button">Показать</button>
    </div>
</div>
<script>
document.getElementById('loadBtn').addEventListener('click', async function() {
    const channelId = document.getElementById('channelIdInput').value;
    if (!channelId) {
        alert('Введите Channel ID');
        return;
    }
    const formData = new FormData();
    formData.append('channelId', channelId);
    const res = await fetch('/api/youtube/load', {
        method: 'POST',
        body: formData
    });
    if (res.ok) {
        window.location.href = `/Home/Index?channelId=${encodeURIComponent(channelId)}`;
    } else {
        alert('Ошибка загрузки видео');
    }
});
document.getElementById('showBtn').addEventListener('click', function() {
    const channelId = document.getElementById('channelIdInput').value;
    if (!channelId) {
        alert('Введите Channel ID');
        return;
    }
    window.location.href = `/Home/Index?channelId=${encodeURIComponent(channelId)}`;
});
</script>

@if (Model.Videos != null && Model.Videos.Any())
