    <div style="display: flex; gap: 10px;">
        <input type="text" id="channelIdInput" name="channelId" placeholder="Введите Channel ID" required class="input-field" />
        <button id="loadBtn" class="yt-button" type="button">Загрузить</button>
        <button id="showBtn" class="yt-button" type="button">Показать</button>
    </div>
</div>

<script>
    function setThemeSwitch(dark) {
        const btn = document.getElementById('themeSwitchBtn');
        const icon = document.getElementById('themeSwitchIcon');
        if (dark) {
            document.body.classList.add('dark-theme');
            btn.classList.add('dark');
            icon.className = 'fas fa-moon';
        } else {
            document.body.classList.remove('dark-theme');
            btn.classList.remove('dark');
            icon.className = 'fas fa-sun';
        }
        localStorage.setItem('theme', dark ? 'dark' : 'light');
    }
    document.getElementById('themeSwitchBtn').onclick = function () {
        setThemeSwitch(!document.body.classList.contains('dark-theme'));
    };
    window.onload = function () {
        if (localStorage.getItem('theme') === 'dark') setThemeSwitch(true);
        else setThemeSwitch(false);
    };
</script>

<script>
document.getElementById('loadBtn').addEventListener('click', async function() {
    const channelId = document.getElementById('channelIdInput').value;
    if (!channelId) {
        alert('Введите Channel ID');
        return;
    }
    const formData = new FormData();
    formData.append('channelId', channelId);
    const res = await fetch('/api/youtube/load', {
        method: 'POST',
        body: formData
    });
    if (res.ok) {
        window.location.href = `/Home/Index?channelId=${encodeURIComponent(channelId)}`;
    } else {
        alert('Ошибка загрузки видео');
    }
});
document.getElementById('showBtn').addEventListener('click', function() {
    const channelId = document.getElementById('channelIdInput').value;
    if (!channelId) {
        alert('Введите Channel ID');
        return;
    }
    window.location.href = `/Home/Index?channelId=${encodeURIComponent(channelId)}`;
});
</script>

